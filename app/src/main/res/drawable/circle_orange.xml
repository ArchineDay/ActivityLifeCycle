<!-- rounded_shape_with_padding.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shape with padding -->
    <item
        android:left="2dp"
    android:top="2dp"
    android:right="2dp"
    android:bottom="2dp">

    <!-- Circular shape -->
    <shape
        android:shape="oval">

        <!-- Set the background color for the circular shape -->
        <solid android:color="@color/orange" />

        <!-- You can also define a stroke (border) for the circle if needed -->
        <!--
        <stroke
            android:width="2dp"
            android:color="#000000" />
        -->
    </shape>

</item>
    </layer-list>
